{
  "name": "csic-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.1",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/multer": "^1.3.10",
    "@types/pg": "^7.11.2",
    "ts-node": "^8.4.1",
    "ts-node-dev": "^1.0.0-pre.43",
    "typescript": "^3.6.4"
  },
  "scripts": {
    "start": "ts-node-dev ./src/main.ts",
    "dev": "ts-node-dev --no-notify --respawn --transpileOnly ./src/main.ts",
    "lint": "eslint --max-warnings 0 \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit -p .",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "local-jest": "jest --coverage --passWithNoTests",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@types/sjcl": "^1.0.28",
    "@types/validator": "^10.11.3",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.5.1",
    "express": "^4.17.1",
    "jest": "^24.9.0",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.2",
    "pg": "^7.12.1",
    "prettier": "^1.18.2",
    "sjcl": "^1.0.8",
    "tsconfig.json": "^1.0.7",
    "validator": "^11.1.0"
  },
  "prettier": {
    "bracketSpacing": true,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "tabWidth": 2
  }
